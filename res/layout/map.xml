<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/commonlayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <com.google.android.maps.MapView
        android:id="@+id/mapview_thingy"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:apiKey="0rFOu71JsBA3vLAZvTtMUqyJ1BhrXpHsinjmOXQ"
        android:clickable="true" />

    <!-- Caleb's key(s)
    android:apiKey="0Pvg9pZ1g3nrWHpfUgVCOa94EIhDdzl1mTa5Uog"
    android:apiKey="0Pvg9pZ1g3noO4pul2ZN3olBksrReNyXuGgtrWg"
    -->

    <!-- Jeremy's key(s)
    android:apiKey="0rFOu71JsBA3vLAZvTtMUqyJ1BhrXpHsinjmOXQ"
    -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:orientation="horizontal" >

        <com.gvsu.socnet.views.TranslucentPanel
            android:id="@+id/transparent_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center" >

            <RelativeLayout
                android:id="@+id/llheader"
                android:layout_width="fill_parent"
                android:layout_height="50dip"
                android:orientation="horizontal"
                android:visibility="visible" >

                <Button
                    android:id="@+id/map_settings_button"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="25dip"
                    android:background="@drawable/ic_menu_settings"
                    android:textColor="#FFFFFF" >
                </Button>

                <Button
                    android:id="@+id/map_blank1"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_toLeftOf="@+id/map_filter_button"
                    android:background="@drawable/blnk_button"
                    android:padding="10dip"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/map_filter_button"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_toLeftOf="@+id/map_profile_button"
                    android:background="@drawable/star_full"
                    android:padding="10dip"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/map_profile_button"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginLeft="2dip"
                    android:layout_toLeftOf="@+id/map_map_button"
                    android:background="@drawable/user_pic"
                    android:padding="10dip"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/map_map_button"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_marginRight="2dip"
                    android:layout_toLeftOf="@+id/map_capture_button"
                    android:background="@drawable/ic_tab_map_color"
                    android:padding="10dip"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/map_capture_button"
                    android:layout_width="50dip"
                    android:layout_height="50dip"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="2dip"
                    android:background="@drawable/camera" />
            </RelativeLayout>
        </com.gvsu.socnet.views.TranslucentPanel>
    </LinearLayout>
    <!-- </FrameLayout> -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:orientation="horizontal"
        android:paddingBottom="10dip"
        android:paddingRight="10dip" >

        <com.gvsu.socnet.views.TranslucentPanel
            android:id="@+id/transparent_panel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/map_zoom_in_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:src="@drawable/zoom_in" />

                <ImageView
                    android:id="@+id/map_zoom_out_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dip"
                    android:src="@drawable/zoom_out" />
            </LinearLayout>
        </com.gvsu.socnet.views.TranslucentPanel>
    </LinearLayout>

</FrameLayout>